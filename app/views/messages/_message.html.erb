<div id="message-<%= message.id %>" class="message <%= message.user == current_user ? 'sent-message' : 'received' %>">
  <small>
    <strong><%= message.user.user_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
