
<div class="container">

    <div class="profile-image-container">
      <% if @user.photo.attached? %>
        <%= image_tag(@user.photo, class: "profile-image", alt: "avatar") %>
        <% else %>
      <img class="profile-image" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" alt="Change your image">
      <% end %>
      <i class="plus-icon fa-solid fa-circle-plus"></i>

    </div>

    <div>
      <div style="text-align: center;">

        <h6><%= @user.email %></h6>
        <p><%= @user.address %></p>
        <h4 class="mb-3"><%= @user.user_name.capitalize %>'s Interests</h4>
      </div>
      <div class="user-added-interest d-flex flex-wrap mb-3">

        <% if @user_interests.present? %>
          <div class="user-added-interest d-flex flex-wrap mb-3">
            <% @user_interests.each do |user_interest| %>
              <a href="#" class="btn btn-sm button-3 mb-2 me-2"><%= user_interest.interest.name %></a>
            <% end %>
          </div>
        <% end %>

      </div>

      <div>
        <h5>About <%= @user.user_name.capitalize %> :</h5>
        <div class="user-infos">
          <p><%= @user.description %></p>
        </div>
      </div>
    </div>
    <div style="text-align: center; height: 50px;">
      <%= link_to "Like â¤ï¸", find_buddies_path, style: "text-decoration: none;" %>
    </div>

</div>
